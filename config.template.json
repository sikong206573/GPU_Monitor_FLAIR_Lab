{
  "database": {
    "path": "gpu_monitor.db",
    "comment": "SQLite database file location"
  },
  "update_interval": 30,
  "comment_interval": "Seconds between GPU checks (30 = every 30 seconds)",
  "gpus": [
    {"id": 0, "name": "GPU 0"},
    {"id": 1, "name": "GPU 1"},
    {"id": 2, "name": "GPU 2"},
    {"id": 3, "name": "GPU 3"}
  ],
  "notion": {
    "enabled": true,
    "token": "YOUR_NOTION_TOKEN_HERE",
    "realtime_page_id": "YOUR_REALTIME_PAGE_ID",
    "daily_chart_page_id": "YOUR_DAILY_CHART_PAGE_ID",
    "weekly_chart_page_id": "YOUR_WEEKLY_CHART_PAGE_ID",
    "process_history_db_id": "YOUR_PROCESS_HISTORY_DB_ID",
    "comment": "Get token from https://www.notion.so/my-integrations"
  },
  "email": {
    "enabled": true,
    "smtp_server": "smtp.gmail.com",
    "smtp_port": 587,
    "sender_email": "your.email@example.com",
    "sender_password": "YOUR_APP_PASSWORD_HERE",
    "user_email_domain": "example.com",
    "comment": "For Gmail, use App Password from https://myaccount.google.com/apppasswords"
  },
  "aws_s3": {
    "enabled": true,
    "bucket": "your-bucket-name",
    "region": "us-east-1",
    "access_key": "YOUR_AWS_ACCESS_KEY",
    "secret_key": "YOUR_AWS_SECRET_KEY",
    "comment": "AWS S3 for chart image hosting"
  },
  "idle_threshold_minutes": 10,
  "idle_utilization_threshold": 5,
  "chart_output_dir": "./charts",
  "chart_dpi": 150,
  "chart_figsize": [14, 6]
}
